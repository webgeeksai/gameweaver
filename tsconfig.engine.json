{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out/engine",
    "rootDir": "./src/engine",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./out/.tsbuildinfo-engine",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/engine/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "src/engine/behaviors/**/*",
    "src/engine/systems/BehaviorSystem.ts",
    "src/engine/systems/GameSystem.ts"
  ]
}